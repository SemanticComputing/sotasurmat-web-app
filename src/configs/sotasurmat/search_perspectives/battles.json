{
    "id": "battles",
    "endpoint": {
        "url": "https://ldf.fi/siso/sparql",
        "useAuth": false,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesBattles.js",
    "baseURI": "http://ldf.fi/siso",
    "URITemplate": "<BASE_URI>/sita/<LOCAL_ID>",
    "facetClass": "siso-schema:Battle",
    "frontPageImage": "punainenRintama.jpg",
    "searchMode": "faceted-search",
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "maps": {
        "battlePlaces": {
            "center": [
                64.00,
                30.00
            ],
            "zoom": 5
        }
    },
    "resultClasses": {
        "battles": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "battleProperties",
                "pagesize": 25,
                "sortBy": "startDate",
                "sortDirection": "asc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "battleProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    }
                }
            }
        },
        "battlePlaces": {
            "tabID": 1,
            "component": "LeafletMap",
            "showInstanceCountInClusters": false,
            "tabPath": "map",
            "tabIcon": "AddLocation",
            "sparqlQuery": "battlePlacesQuery",
            "facetClass": "battles",
            "filterTarget": "id",
            "resultMapper": "mapPlaces",
            "showExternalLayers": false,
            "instanceConfig": {
                "propertiesQueryBlock": "battleProperties",
                "createPopUpContent": "createPopUpContentSotasurmat"
            }
        },
        "battlePlacesAnimation": {
            "tabID": 2,
            "component": "TemporalMap",
            "tabPath": "animation",
            "tabIcon": "AddLocation",
            "sparqlQuery": "battlePlacesAnimationQuery",
            "facetClass": "battles",
            "filterTarget": "id"        
        }
    },
    "properties": [
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 170
        },
        {
            "id": "startDate",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "endDate",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 170
        },
        {
            "id": "greaterPlace",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150
        },
        {
            "id": "exactPlace",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 190
        },
        {
            "id": "units",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150
        }
    ],
    "facets": {
        "startDate": {
            "sortByPredicate": "siso-schema:start_date"
        },
        "endDate": {
            "sortByPredicate": "siso-schema:end_date"
        },
        "exactPlace": {
            "sortByPredicate": "siso-schema:exact_place"
        },
        "units": {
            "sortByPredicate": "siso-schema:units"
        },
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        },
        "greaterPlace": {
            "containerClass": "ten",
            "facetType": "hierarchical",
            "filterType": "uriFilter",
            "parentProperty": "skos:broader",
            "predicate": "siso-schema:greater_place",
            "searchField": true,
            "sortByPredicate": "siso-schema:greater_place/skos:prefLabel"
        }
    }
}